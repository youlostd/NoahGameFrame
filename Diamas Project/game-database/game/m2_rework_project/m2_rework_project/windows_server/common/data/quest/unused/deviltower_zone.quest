		when 1040.kill with pc.in_dungeon() and pc.get_map_index() >= 1620000 and pc.get_map_index() < 1630000 begin
			local pct1 = number(1, 10)
			if pct1 == 1 then
				local pct2 = number(1, 5)
				if pct2 == 1 then
					game.drop_item(30304, 1)
				else
					game.drop_item(30304, 1)
				end
			else
				return
			end
		end
		
		when 20366.take with item.vnum == 30304 begin
			npc.purge()
			item.remove()
			timer("devil_jump_9", 6)
