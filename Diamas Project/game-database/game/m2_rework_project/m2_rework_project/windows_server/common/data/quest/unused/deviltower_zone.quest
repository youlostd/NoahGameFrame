				return
			end
			say_title(c_mob_name(20074))
			say(gameforge.deviltower_zone._230_say)
			wait()
			pc.warp(161, 529,600)
			return
		end
		
		when 20075.chat.gameforge.deviltower_zone._170_npcChat with pc.in_dungeon() and pc.get_map_index() >= 1620000 and pc.get_map_index() < 1630000  and npc.lock() begin
			say_title(c_mob_name(20075))
			if d.getf("level") > 6 then
				local s =  select(gameforge.deviltower_zone._220_select, gameforge.deviltower_zone._220_select)
				if s == 1 then
					pc.warp(161, 529,600)
					return
				end
				return
			end
			say(gameforge.deviltower_zone._190_say)
			wait()
			if pc.level >=95 then
				say_title(c_mob_name(20075))
				
				say(gameforge.deviltower_zone._200_say)
				local s=  select(gameforge.deviltower_zone._210_select, gameforge.locale.cancel)
				if s==3 then
