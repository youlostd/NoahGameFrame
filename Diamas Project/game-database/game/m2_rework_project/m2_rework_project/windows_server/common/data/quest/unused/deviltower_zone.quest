		end
		when 20076.chat.gameforge.deviltower_zone._170_npcChat with pc.in_dungeon() and pc.get_map_index() >= 1620000 and pc.get_map_index() < 1630000  and npc.lock() begin
			say_title(c_mob_name(20076))
			if d.getf("level") > 6 then
				local s =  select(gameforge.deviltower_zone._220_select, gameforge.locale.cancel)
				if s == 1 then
					pc.warp(161, 529,600)
