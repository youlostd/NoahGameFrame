			d.jump_all(590, 155)
			d.regen_file("data/dungeon/deviltower/deviltower9_regen.txt")
		end
		
		when 1193.kill with pc.in_dungeon() and pc.get_map_index() >= 1620000 and pc.get_map_index() < 1630000 begin
			d.setqf2("deviltower_zone","9_done", 1)
			pc.setqf("boss_kills", pc.getqf("boss_kills") + 1)
			if math.mod(pc.getqf("boss_kills"), 10) == 0 then
				notice_all("%s hat den Boss2 bereits %d Mal gekillt", pc.get_name(), pc.getqf("boss_kills") )
			end
			-- notice_all(gameforge.deviltower_zone._190_notice_all1 .. pc.get_name() .. gameforge.deviltower_zone._190_notice_all2) --- GLOBAL NOTICE
			server_timer("devil_boss_end_jump", 30, d.get_map_index())

		end
		
		when devil_boss_end_jump.server_timer begin
			if d.select(get_server_timer_arg()) then
				d.clear_regen()
				d.exit_all()
			end
		end
